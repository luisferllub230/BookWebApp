<div class="container">
    {{#if activeEditorial}}
    <form action="/admin/delete/editorial" method="post">
        <div class="card">
            <div class="card-header text-center">
                <h1 class="card-title">Do you want to delete this editorial?</h1>
            </div>
            <div class="card-body row">
                <div class="col-12 col-md-12">
                    <ul>
                        <li><strong>ID: </strong>{{editorial.id}}</li>
                        <li><strong>NAME: </strong>{{editorial.EditorialName}}</li>
                        <li><strong>PHONE: </strong>{{editorial.EditorialPhone}}</li>
                        <li><strong>COUNTRY: </strong>{{editorial.EditorialCountry}}</li>
                    </ul>
                    <input type="hidden" name="id" value="{{editorial.id}}">
                </div>
            </div>
            <div class="card-footer">
                <button type="submit" class="btn btn-success">Delete</button>
                <a href="/admin/editorials" class="btn btn-warning">Cancel</a>
            </div>
        </div>
    </form>
    {{/if}}

